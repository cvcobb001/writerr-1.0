{
  "name": "@writerr/shared",
  "version": "1.0.0",
  "description": "Shared utilities, types, and event system for Writerr plugins",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:dev": "rollup -c --watch",
    "dev": "npm run build:dev",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "obsidian": "latest"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "typescript": "^5.2.2",
    "rollup": "^3.29.4"
  },
  "peerDependencies": {
    "obsidian": "*"
  }
}